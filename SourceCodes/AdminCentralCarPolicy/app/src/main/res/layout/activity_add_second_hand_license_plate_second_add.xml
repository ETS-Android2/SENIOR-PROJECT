<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191414"
    tools:context=".view.AddSecondHandLicensePlateSecondAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#191414">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="ADD NEW LICENSE PLATE"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="325dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="center"
            android:hint="Owner Name"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/surnameInput"
            android:layout_width="325dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:textColorHint="@color/black"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="Owner Surname"
            android:textSize="15sp"
            android:background="@color/white"/>

        <EditText
            android:id="@+id/cityCodeInput"
            android:layout_width="325dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:textColorHint="@color/black"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="City Code"
            android:textSize="15sp"
            android:background="@color/white"/>

        <EditText
            android:id="@+id/letterGroupInput"
            android:layout_width="325dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:textColor="@color/black"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="Letter Group"
            android:textSize="15sp"
            android:background="@color/white"/>

        <EditText
            android:id="@+id/digitGroupInput"
            android:layout_width="325dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="Digit Group"
            android:textSize="15sp"
            android:background="@color/white"/>


        <Button
            android:id="@+id/saveButton"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/my_green"
            android:onClick="saveToDatabase"
            android:text="SAVE" />
    </LinearLayout>

</ScrollView>