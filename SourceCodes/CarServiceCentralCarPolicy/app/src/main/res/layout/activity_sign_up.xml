<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_black"
    tools:context=".view.SignUpActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/widget_height_size"
        android:layout_marginTop="31dp"
        android:backgroundTint="@color/my_green"
        android:onClick="signUpToSystem"
        android:text="SIGN UP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyAddressInput" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/widget_height_size"
        android:textColor="@color/black"
        android:layout_marginTop="22dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyNameInput" />

    <EditText
        android:id="@+id/companyNameInput"
        android:layout_width="@dimen/button_size"
        android:textColor="@color/black"
        android:layout_height="@dimen/widget_height_size"
        android:layout_marginTop="31dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Company Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/widget_height_size"
        android:layout_marginTop="23dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailInput" />

    <EditText
        android:id="@+id/phoneInput"
        android:layout_width="322dp"
        android:layout_height="51dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="46dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:ems="10"
        android:hint="Phone Number without +90"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordInput" />

    <EditText
        android:id="@+id/companyAddressInput"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/widget_height_size"
        android:layout_marginTop="17dp"
        android:background="@color/white"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="Company Address"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneInput" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="SIGN UP TO SYSTEM"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>