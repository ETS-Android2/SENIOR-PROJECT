<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_black"
    tools:context=".view.AddServiceNewRecordActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD NEW RECORD"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_margin="20dp"/>

            <EditText
                android:id="@+id/cityCodeInput"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/widget_height_size"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="City Code"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/letterGroupInput"
                android:layout_marginBottom="25dp"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/widget_height_size"
                android:layout_gravity="center"
                android:background="@color/white"
                android:ems="10"
                android:textColor="@color/black"
                android:hint="Letter Group"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/digitGroupInput"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/widget_height_size"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Digit Group"
                android:inputType="number"
                android:textAlignment="center"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/kilometersInput"
                android:layout_width="@dimen/button_size"
                android:textColor="@color/black"
                android:layout_height="@dimen/widget_height_size"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Kilometers"
                android:inputType="number"
                android:textAlignment="center"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/damageCostInput"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/widget_height_size"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Damage Cost"
                android:inputType="number"
                android:textAlignment="center"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/damageDetailsInput"
                android:layout_marginBottom="25dp"
                android:layout_width="@dimen/button_size"
                android:layout_height="110dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:background="@color/white"
                android:ems="10"
                android:hint="Damage Details"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/operationsInput"
                android:layout_width="326dp"
                android:layout_height="109dp"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Operations"
                android:textColor="@color/black"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColorHint="@color/black" />

            <Button
                android:id="@+id/saveRecordButton"
                android:onClick="saveRecordOnClick"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/widget_height_size"
                android:text="SAVE"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@color/my_green"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>